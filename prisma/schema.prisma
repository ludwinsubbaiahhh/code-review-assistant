// File: prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  fileName  String
  code      String   @db.Text
  report    Json     // We will store the full JSON report
}