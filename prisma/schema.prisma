generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Defines the table for storing code review reports
model Review {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  fileName  String
  code      String   @db.Text // @db.Text is good for long code blocks
  report    String   @db.Text // @db.Text is good for long LLM reports
}